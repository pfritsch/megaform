              +buttonBarItem(inputLabel="small" inputName="item4" inputChecked="")
              +buttonBarItem(inputLabel="middle" inputName="item4" inputChecked="")
              +buttonBarItem(inputLabel="high" inputName="item4" inputChecked="checked")
          input(type="text" placeholder="Comment")


    +questionAnchor(id=6)
    fieldset.row
